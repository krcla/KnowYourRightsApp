<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/nakasec_phone_description"
      android:text="@string/nakasec_phone_description"
      android:gravity="center"
      android:textSize="20sp"/>

  <Button
      android:text="@string/nakasec_phone_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/nakasec_button"
      android:textSize="24sp" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="40sp"
      android:gravity="center"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/uwd_phone_description"
      android:text="@string/uwd_phone_description"
      android:gravity="center"
      android:textSize="18sp"/>

  <Button
      android:text="@string/uwd_phone_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/uwd_button"
      android:textSize="24sp" />

</LinearLayout>
